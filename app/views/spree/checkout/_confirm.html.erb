<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @order } %>

<fieldset id="order_details" data-hook>
  <p class='text-warning'>
    <%= raw t(:order_not_yet_placed) %>
  </p>
  <div class="clear"></div>
  <legend align="center"><%= Spree.t(@order.state, :scope => :order_state).titleize %></legend>
  <%= render :partial => 'spree/shared/order_details', :locals => { :order => @order } %>
</fieldset>

<br />

<div class="form-buttons" data-hook="buttons">
  <%= submit_tag Spree.t(:place_order), :class => "btn btn-primary" %>
  <script>disableSaveOnClick();</script>
</div>